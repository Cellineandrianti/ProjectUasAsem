<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Judul Halaman -->
    <TextView
        android:id="@+id/anakTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jadwal Harian Anak"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Tampilan Jadwal Harian Anak -->
    <ListView
        android:id="@+id/jadwalListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:layout_marginBottom="16dp" />

    <!-- Tombol untuk Menyelesaikan Tugas -->
    <Button
        android:id="@+id/selesaiButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selesai"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Tombol untuk Mengumpulkan Koin/Point -->
    <Button
        android:id="@+id/kumpulkanKoinButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kumpulkan Koin/Point"
        android:layout_gravity="center" />

</LinearLayout>
